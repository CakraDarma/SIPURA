// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum VoteType {
  UP
  DOWN
}

enum Role {
  ADMIN
  PRAJURU
}

enum CategoryPura {
  KAWITAN
  SWAGINA
  KAHYANGAN_DESA
  KAHYANGAN_JAGAT
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  password      String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  alamat        String?
  telepon       String?
  role          Role      @default(PRAJURU)

  puras        Pura[]
  userRoles    UserRole[]
  votes        Vote[]
  accounts     Account[]
  sessions     Session[]
  kegiatans    Kegiatan[]
  Comments     Comment[]
  CommentVotes CommentVote[]

  // pura
  upacaras     Upacara[]
  pratimas     Pratima[]
  pelinggihs   Pelinggih[]
  userTokens   User_refresh_token[]
  virtualTours VirtualTour[]
}

model Pura {
  id           String        @id @default(cuid())
  name         String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userId       String?
  konten       Json?
  tahunBerdiri Int?
  alamat       String?
  piodalan     String?
  kategori     CategoryPura?

  user         User?         @relation(fields: [userId], references: [id])
  kegiatans    Kegiatan[]
  subscribers  UserRole[]
  upacaras     Upacara[]
  pratimas     Pratima[]
  pelinggihs   Pelinggih[]
  virtualTours VirtualTour[]

  @@index([name])
}

model UserRole {
  userId String
  puraId String

  user User @relation(fields: [userId], references: [id])
  pura Pura @relation(fields: [puraId], references: [id])

  @@id([userId, puraId])
}

model Kegiatan {
  id        String   @id @default(cuid())
  title     String
  content   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  puraId    String

  pura     Pura      @relation(fields: [puraId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  comments Comment[]
  votes    Vote[]
}

model Comment {
  id         String   @id @default(cuid())
  text       String
  createdAt  DateTime @default(now())
  userId     String
  kegiatanId String
  replyToId  String?
  commentId  String?

  user     User          @relation(fields: [userId], references: [id])
  kegiatan Kegiatan      @relation(fields: [kegiatanId], references: [id], onDelete: Cascade)
  replyTo  Comment?      @relation("ReplyTo", fields: [replyToId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies  Comment[]     @relation("ReplyTo")
  votes    CommentVote[]
}

model Vote {
  userId     String
  kegiatanId String
  type       VoteType

  user     User     @relation(fields: [userId], references: [id])
  kegiatan Kegiatan @relation(fields: [kegiatanId], references: [id], onDelete: Cascade)

  @@id([userId, kegiatanId])
}

model CommentVote {
  userId    String
  commentId String
  type      VoteType

  user    User    @relation(fields: [userId], references: [id])
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@id([userId, commentId])
}

model Pratima {
  id               String   @id @default(cuid())
  nama             String
  konten           Json?
  puraId           String
  bahan            String
  jenis            String
  userId           String
  tahunPeninggalan Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  pura Pura @relation(fields: [puraId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Pelinggih {
  id               String   @id @default(cuid())
  puraId           String
  userId           String
  nama             String
  konten           Json
  tahunPeninggalan Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  pura    Pura     @relation(fields: [puraId], references: [id])
  user    User     @relation(fields: [userId], references: [id])
  bantens Banten[]
}

model User_refresh_token {
  id           String   @id @default(cuid())
  refreshToken String   @db.VarChar(255)
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model VirtualTour {
  id          String   @id @default(cuid())
  puraId      String
  userId      String
  virtualTour String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pura Pura @relation(fields: [puraId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Banten {
  id          String   @id @default(cuid())
  pelinggihId String
  upacaraId   String
  nama        String
  konten      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pelinggih Pelinggih @relation(fields: [pelinggihId], references: [id])
  upacara   Upacara   @relation(fields: [upacaraId], references: [id])
}

model Upacara {
  id        String   @id @default(cuid())
  puraId    String
  userId    String
  nama      String
  biaya     String
  konten    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pura    Pura     @relation(fields: [puraId], references: [id])
  user    User     @relation(fields: [userId], references: [id])
  bantens Banten[]
}
